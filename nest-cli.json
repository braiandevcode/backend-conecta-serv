{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "assets/**/*" },
      {
        "include": "templates/**/*",
        "outDir": "."
      }
    ],
    "watchAssets": true
  }
}

